    <style>
        @keyframes thinkingpulse {
            0%,
            100% {
              opacity: 1;
            }
            50% {
              opacity: 0.5;
            }
          }
        body {
            font-family: 'Poppins', sans-serif;
        }
        .footer-banner {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #4a4a4a;
            color: white;
            padding: 20px;
            /* position: absolute; */
            bottom: 0;
            width: 100%;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
        }
        .footer-text {
            font-size: 18px;
            font-weight: bold;
        }
        .feature-icon {
            width: 24px;
            height: 24px;
            font-size: 24px;
        }
        .thinking-pulse {
          animation: thinkingpulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        @media (max-width: 768px) {
          .footer-banner {
            flex-direction: column;
            text-align: center;
          }
          .footer-text {
            margin-bottom: 10px;
          }
        }
    </style>
    <% if Rails.env.production? && ENV['CLARITY_TRACKING_ID'].present? %>

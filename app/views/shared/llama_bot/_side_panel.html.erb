<script>
  function handleDownload(event, pageId, pageSlug) {
    event.preventDefault();
    
    // Track click in Mixpanel
    mixpanel.track('Download Clicked', { 
      page_id: pageId, 
      url: window.location.href 
    });

    // Show loading spinner
    const downloadText = document.getElementById('download-text');
    const downloadSpinner = document.getElementById('download-spinner');
    downloadText.classList.add('invisible');
    downloadSpinner.classList.remove('hidden');

    try {
      // Simple approach: just navigate to the download URL
      window.location.href = `/pages/${pageId}/download_html`;
      
      // Track successful download attempt
      mixpanel.track('Download Completed', { 
        page_id: pageId, 
        url: window.location.href 
      });

    } catch (error) {
      console.error('Download failed:', error);
      
      // Track failed download
      mixpanel.track('Download Failed', { 
        page_id: pageId, 
        url: window.location.href,
        error: error.message 
      });
      
      // Show user-friendly error message
      if (typeof showNotification === 'function') {
        showNotification('Download failed. Please try again.', 'error');
      } else {
        alert('Download failed. Please try again.');
      }
    } finally {
      // Hide loading spinner after a short delay
      setTimeout(() => {
        downloadText.classList.remove('invisible');
        downloadSpinner.classList.add('hidden');
      }, 1000);
    }
  }
</script>
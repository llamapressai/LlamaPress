<style type="text/css" id="selection-mode-styles">
    .selected-element {
        position: relative;
    }

    .selected-element::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border: 2px solid #3b82f6;
        /* background-color: rgba(59, 130, 246, 0.1); */
        pointer-events: none;
        /* z-index: 900;*/ /* this z-index must be lower than the chat window, but higher than the user's page content  */
    }
    
    /* TODO: this isn't working to give the visual feedback that the user can drop the element here, it's a work in progress. */
    .drag-over {
        background-color: rgba(255, 215, 0, 0.4); /* Gold color with opacity */
        box-shadow: 0 0 12px rgba(255, 215, 0, 0.8); /* Bright gold shadow */
        outline: 3px dashed #FFD700; /* Gold dashed outline */
    }

    .selection-mode-banner {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        text-align: center;
        padding: 8px;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .selection-mode-exit {
        color: #ff4444;
        cursor: pointer;
        padding: 4px 8px;
        font-size: 20px;
        font-weight: bold;
    }

    .selection-mode-exit:hover {
        color: #ff6666;
    }
    </style>

    <script>
  document.addEventListener("DOMContentLoaded", function() {
    // Select the style element
    var styleElement = document.getElementById('selection-mode-styles');
    
    if (styleElement) {
      // Remove it from its current position
      styleElement.parentNode.removeChild(styleElement);
      
      // Append it to the head
      document.head.appendChild(styleElement);
    }
  });
</script>
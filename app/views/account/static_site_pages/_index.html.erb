<% static_site_pages = static_site_pages.accessible_by(current_ability) %>
<% static_site = @static_site %>
<% context ||= static_site %>
<% collection ||= :static_site_pages %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, static_site_pages = pagy(static_site_pages, page_param: :static_site_pages_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <% box.description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless static_site_pages.any?}") %>
        <%= render "shared/limits/index", model: static_site_pages.model %>
      <% end %>

      <% box.table do %>
        <% if static_site_pages.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.content.heading') %></th>
                <th><%= t('.fields.slug.heading') %></th>
                <th><%= t('.fields.prompt.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'account/static_site_pages/static_site_page', collection: static_site_pages %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == static_site %>
            <% if can? :create, StaticSitePage.new(static_site: static_site) %>
              <%= link_to t('.buttons.new'), [:new, :account, static_site, :static_site_page], class: "#{first_button_primary(:static_site_page)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if static_site_pages.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:static_site_page)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

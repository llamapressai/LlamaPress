<% cancel_path ||= static_site_page.persisted? ? [:account, static_site_page] : [:account, @static_site, :static_site_pages] %>

<%= form_with model: static_site_page, url: (static_site_page.persisted? ? [:account, static_site_page] : [:account, @static_site, :static_site_pages]), local: true, class: 'form' do |form| %>
  <%= render "shared/limits/form", form: form, cancel_path: cancel_path do %>
    <%= render 'account/shared/forms/errors', form: form %>

    <% with_field_settings form: form do %>
      <%= render 'shared/fields/text_area', method: :content, options: {autofocus: true} %>
      <%= render 'shared/fields/text_field', method: :slug %>
      <%= render 'shared/fields/text_field', method: :prompt %>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <% end %>

    <div class="buttons">
      <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
      <%= link_to t('global.buttons.cancel'), cancel_path, class: "button-secondary" %>
    </div>
  <% end %>
<% end %>

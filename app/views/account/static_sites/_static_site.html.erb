<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :static_sites %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: static_site do %>
  <tr data-id="<%= static_site.id %>">
    <%= render "shared/tables/checkbox", object: static_site %>
    <td><%= render 'shared/attributes/text', attribute: :name, url: [:account, static_site] %></td>
    <td><%= render 'shared/attributes/text', attribute: :slug %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, static_site %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, static_site], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, static_site %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, static_site], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(static_site)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>

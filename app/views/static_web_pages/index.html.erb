<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Static web pages" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Static web pages</h1>
    <%= link_to "New static web page", new_static_web_page_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="static_web_pages" class="min-w-full">
    <% @static_web_pages.each do |static_web_page| %>
      <%= render static_web_page %>
      <p>
        <%= link_to "Show this static web page", static_web_page, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
